
<%= form_tag("https://localhost:3000/api/v1/gifts", method: "post", id: "form") do %>

	<input type="hidden" value="<%= @client_token %>" id="client_token">
	<input type="hidden" name="school[id]" value="<%= @school.id %>">
	<div>
		<label for="donor_first_name">First Name</label><br>
		<input type="text" name="donor[first_name]" id="donor_first_name" class="form-input" value="<%= @donor.first_name unless @donor.nil? %>">
		<div id="donor_first_name_error" class="error"></div>
	</div>
	<div>
		<label for="donor_last_name">Last Name</label><br>
		<input type="text" name="donor[last_name]" id="donor_last_name" class="form-input" value="<%= @donor.last_name unless @donor.nil? %>">
		<div id="donor_last_name_error" class="error"></div>
	</div>
	<div>
		<label for="donor_email">Email</label><br>
		<input type="text" name="donor[email]" id="donor_email" class="form-input" value="<%= @donor.email unless @donor.nil? %>">
		<div id="donor_email_error" class="error"></div>
	</div>
	<div>
		<label for="donor_phone_number">Cell Number</label><br>
		<input type="text" name="donor[phone_number]" id="donor_phone_number" class="form-input" value="<%= @donor.phone_number unless @donor.nil? %>">
		<div id="donor_phone_number_error" class="error"></div>
	</div>

	<% if @donor.nil? %>

		<div class="gift-total">
			<div>
				<input type="radio" name="gift[total]" value="50" checked>
				<label>50</label>
			</div>
			<div>
				<input type="radio" name="gift[total]" value="100">
				<label>100</label>
			</div>
			<div>
				<input type="radio" name="gift[total]" value="250">
				<label>250</label>
			</div>
			<div>
				<input type="radio" name="gift[total]" for="gift_total_other" id="gift_other_box">
				<input type="text" id="gift_total_other" placeholder="Other">
			</div>
		</div>

	<% else %>

	<div>
		<label for="gift_total_primary"><%= @donor.suggested_gift %></label>
		<input type="radio" name="gift[total]" value="<%= @donor.suggested_gift %>">
	</div>
	<div>
		<input type="radio" name="gift[total]" for="gift_total_other">
		<input type="text" name="gift[total_other]" id="gift_total_other" placeholder="Other">
	</div>

	<% end %>

	<div>
		<label>Gift Type</label>
		<span><input type="radio" name="gift[gift_type]" value="gift" checked>Gift</span>
		<span><input type="radio" name="gift[gift_type]" value="pledge" id="gift_type_pledge">Pledge</span>
		<span><input type="radio" name="gift[gift_type]" value="pledge_payment">Pledge Payment</span>
	</div>

	<div>
		<p id="designate-link">I'd Like to specially designate this gift</p>
		<select name="gift[designation]" id="designate">
			<% @school.designation.each do |designation| %>
				<option value="<%= designation %>"><%= designation %></option>
			<% end %>
		</select>
	</div>

	<!-- <div id="braintree-dropin"></div> -->
	<div id="paypal-button">Paypal</div>
	<div id="paypal-info">
		<span id="paypal-email"></span>
		<span id="paypal-cancel"></span>
	</div>

	<div id="card-payment">
		<div>
			<label>Card Number</label><br>
			<input  data-braintree-name="number">
		</div>
		<div>
			<label>Expiration Date</label><br>
			<input  data-braintree-name="expiration_date">
		</div>
	</div>

	<div>
		<input type="submit" name="commit" value="Give to <%= @form.school.name %>">
	</div>

<% end %>

<!-- Load Dependencies -->

<link rel="stylesheet" type="text/css" href="https://localhost:3000/form.css">
<script src="https://js.braintreegateway.com/js/braintree-2.24.1.min.js"></script>
<script src="<%= ENV['host'] %>form.js" type="text/javascript"></script>

