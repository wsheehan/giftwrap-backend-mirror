<div class="container-fluid">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Giftwrap Admin Login</h1>
    </div>

    <div class="col-sm-6 col-sm-offset-3">
      <%= simple_form_for :session, url: login_path do |f|%>
        <%= f.input :email %>
        <%= f.input :password %>

        <%= f.button :submit, 'Sign in' %>
      <% end %>
    </div>
  </div>
</div>